{
  "type": "library",
  "name": "the-ge-prestashop/prestashop-helper",
  "description": "PrestaShop helpers and hacks",
  "authors": [
    {
      "name": "Gabriel Tenita",
      "email": "the.ge.1447624801@tenita.eu"
    }
  ],
  "license": "Apache-2.0",
  "require": {
    "php": ">=8.1.0"
  },
  "autoload": {
    "psr-4": {
      "TheGe\\PrestaShop\\Shared\\": "src/"
    }
  },
  "config": {
    "preferred-install": "dist",
    "prepend-autoloader": false
  },
  "scripts": {
    "dev": "composer install --optimize-autoloader",
    "prod": "composer install --no-dev --optimize-autoloader",
    "test": "vendor/bin/phpstan analyse"
  },
  "require-dev": {
    "phpstan/phpstan": "^2.0"
  }
}
